<resources>
    <!-- Dunkler Stil für den Dialog -->
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorBackground">@color/darkGray</item> <!-- Hintergrundfarbe -->
        <item name="android:textColor">@color/white</item> <!-- Standardtextfarbe -->
        <item name="android:windowBackground">@color/darkGray</item> <!-- Fensterhintergrund -->
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:windowDisablePreview">true</item>

    </style>

    <!-- Stil für den positiven Button -->
    <style name="PositiveButtonStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Stil für den negativen Button -->
    <style name="NegativeButtonStyle">
        <item name="android:textColor">@color/cyan</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>



</resources>
