<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Application Theme -->
    <style name="Theme.WearOSMessageApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Removes the ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- StatusBar color -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- App background -->
        <item name="android:windowBackground">@color/background_dark</item>
    </style>

    <style name="Theme.MyApp.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Entfernt die ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- StatusBar-Farbe anpassen -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item> <!-- Schrift der Statusleiste in weiÃŸ -->

        <!-- Hintergrund der App -->
        <item name="android:windowBackground">@color/background_dark</item>
    </style>
</resources>
