<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292929"
    android:padding="20dp">

    <!-- Toolbar -->
    <include
        layout="@layout/toolbar_header"
        android:id="@+id/toolbarHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <!-- Mikrofon-Icon (z.B. training_mode) -->
    <ImageView
        android:id="@+id/microphoneIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/toolbarHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/training_mode"
        android:contentDescription="Training Icon" />

    <!-- Container für beide Karten -->
    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <!-- Handy Mode Card -->
        <LinearLayout
            android:id="@+id/handyModeCard"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_button_stroke_cyan"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <!-- Linke Hälfte (Icon) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_phone"
                    android:contentDescription="Phone Icon" />
            </LinearLayout>

            <!-- Rechte Hälfte (Text) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Handy"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Track your training progress on your phone."
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Watch Mode Card -->
        <LinearLayout
            android:id="@+id/watchModeCard"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/rounded_button_stroke_cyan"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <!-- Linke Hälfte (Icon) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_watch"
                    android:contentDescription="Watch Icon" />
            </LinearLayout>

            <!-- Rechte Hälfte (Text) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Smartwatch"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Monitor your training with your smartwatch."
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- Fortschritts-Anzeige am untersten Rand (Außerhalb des LinearLayouts!) -->
    <LinearLayout
        android:id="@+id/progressContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- ERSTER PUNKT (z.B. gefüllter Kreis in Weiß) -->
        <View
            android:id="@+id/step1"
            android:layout_width="16dp"
            android:layout_height="16dp"

            android:background="@drawable/circle_filled_white" />

        <!-- Linie zwischen Punkt 1 und 2 -->
        <View
            android:id="@+id/line1"
            android:layout_width="40dp"
            android:layout_height="2dp"

            android:background="@android:color/white" />

        <!-- ZWEITER PUNKT -->
        <View
            android:id="@+id/step2"
            android:layout_width="16dp"
            android:layout_height="16dp"

            android:background="@drawable/circle_filled_white" />

        <!-- Linie zwischen Punkt 2 und 3 -->
        <View
            android:id="@+id/line2"
            android:layout_width="40dp"
            android:layout_height="2dp"

            android:background="@android:color/white" />

        <!-- DRITTER PUNKT -->
        <View
            android:id="@+id/step3"
            android:layout_width="16dp"
            android:layout_height="16dp"

            android:background="@drawable/circle_filled_white" />
    </LinearLayout>
</RelativeLayout>


